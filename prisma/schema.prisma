generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id             String      @id @default(cuid())
  name           String
  filetype       String
  filename       String
  dimensionX     Float
  dimensionY     Float
  dimensionZ     Float
  mass           Float       // in grams
  slicing_status String      @default("pending")
  metadata       Json?
  price          Float       @default(0)
  images         String[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  cartItems      CartItem[]
}

model Color {
  id        String     @id @default(cuid())
  name      String
  hexCode   String
  available Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  cartItems CartItem[]
}

model FileAddon {
  id          String             @id @default(cuid())
  name        String
  description String?
  price       Float              @default(0)
  type        String             // e.g., "queue_priority", "print_assistance", "multi_color"
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  cartAddons  CartItemAddon[]
}

model Cart {
  id        String     @id @default(cuid())
  sessionId String     @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id          String           @id @default(cuid())
  cartId      String
  cart        Cart             @relation(fields: [cartId], references: [id], onDelete: Cascade)
  fileId      String
  file        File             @relation(fields: [fileId], references: [id])
  quantity    Int              @default(1)
  quality     String           @default("better") // "good", "better", "best"
  colorId     String?
  color       Color?           @relation(fields: [colorId], references: [id])
  addons      CartItemAddon[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([cartId, fileId, quality, colorId])
}

model CartItemAddon {
  id         String     @id @default(cuid())
  cartItemId String
  cartItem   CartItem   @relation(fields: [cartItemId], references: [id], onDelete: Cascade)
  addonId    String
  addon      FileAddon  @relation(fields: [addonId], references: [id])
  createdAt  DateTime   @default(now())

  @@unique([cartItemId, addonId])
}
